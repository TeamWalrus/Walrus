<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.bugfuzz.android.projectwalrus">

    <uses-feature android:name="android.hardware.usb.host"/>

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:name=".ProjectWalrusApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key"/>

        <receiver android:name=".device.CardDeviceManager$UsbBroadcastReceiver">
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"/>
                <action android:name="android.hardware.usb.action.USB_DEVICE_DETACHED"/>
            </intent-filter>
        </receiver>

        <activity android:name=".ui.MyWalletActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"/>
            </intent-filter>

            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter"/>
        </activity>
        <activity
            android:name=".ui.DevicesActivity"
            android:label="Devices"
            android:parentActivityName=".ui.MyWalletActivity"/>
        <activity
            android:name=".device.proxmark3.Proxmark3Activity"
            android:label="Proxmark 3"
            android:parentActivityName=".ui.DevicesActivity"/>
        <activity
            android:name=".device.proxmark3.Proxmark3TuneResultActivity"
            android:label="Proxmark 3 - Tune Results"
            android:parentActivityName=".device.proxmark3.Proxmark3Activity"/>
        <activity
            android:name=".ui.SettingsActivity"
            android:parentActivityName=".ui.MyWalletActivity"/>
        <activity
            android:name=".ui.DetailedCardViewActivity"
            android:label="Card Details"
            android:parentActivityName=".ui.MyWalletActivity"/>
        <activity
            android:name=".ui.EditCardActivity"
            android:label="Edit Card"
            android:parentActivityName=".ui.DetailedCardViewActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".device.chameleonmini.ChameleonMiniActivity"
                  android:label="Chameleon Mini Rev.G"
                  android:parentActivityName=".ui.DevicesActivity">
        </activity>
    </application>

</manifest>