<resources>

    <style name="App" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppPreference">
        <item name="android:layout">@layout/preference_material</item>
    </style>

    <style name="AppPreference.DialogPreference">
       <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="AppPreference.SettingActivity"  parent="Theme.AppCompat.DayNight">
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryDarkColor</item>
        <item name="colorControlNormal">@color/primaryDarkColor</item>
        <item name="colorControlActivated">@color/primaryColor</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="App.WithTransitions"/>

    <style name="App.WithTransitions.LauncherActivity">
        <item name="android:windowBackground">@drawable/drawable_launch_screen</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackground">@color/ic_launcher_background</item>
    </style>

</resources>
